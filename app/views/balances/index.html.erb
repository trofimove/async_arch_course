<p id="notice"><%= notice %></p>


<% if current_account.employee? %>
  <h1>Balance: <%= current_account.balance.balance %></h1>

  <table>
    <thead>
      <tr>
        <th>Task</th>
        <th>Amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.each do |tx| %>
        <tr>
          <td><%= tx.task.name %></td>
          <td><%= tx.balance.balance %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <table>
    <thead>
    <tr>
      <th>Day</th>
      <th>Amount</th>
    </tr>
    </thead>

    <tbody>
    <% @transactions.each do |tx| %>
      <tr>
        <td><%= tx.task.name %></td>
        <td><%= tx.balance.balance %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

